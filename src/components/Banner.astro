---
interface Props {
  titleBanner: string;
  altImage: string;
  imageUrl?: string;
  description: string;
  buttonTitle?: string;
  color?: string;
}

const { titleBanner, imageUrl, description, buttonTitle, altImage, color } =
  Astro.props;
---

<div class=`h-auto w-full grid grid-cols-1 md:grid-cols-2 bg-[#${color}]`>
  <div class="flex items-center">
    <img src={imageUrl} alt={altImage} />
  </div>
  <div class="flex items-center justify-center p-10">
    <div class="text-center w-10/12 lg:w-3/5 flex flex-col  gap-6">
      <h1 class="text-2xl lg:text-3xl font-bold">{titleBanner}</h1>
      <h3 class="text-[1.20rem] ">{description}</h3>
      {buttonTitle ?? <button>{buttonTitle}</button>}
    </div>
  </div>

</div>
